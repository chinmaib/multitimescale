	journal = {Journal of Affective Disorders},
	author = {Cella, Matteo and Dymond, Simon and Cooper, Andy},
	month = jul,
	year = {2010},
	keywords = {Decision-making, Depression, Flexibility, IGT, MDD, Reward sensitivity},
	pages = {207--210},
}

