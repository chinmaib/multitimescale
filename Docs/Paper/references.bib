	keywords = {Functional near-infrared spectroscopy, Iowa gambling task, major depressive disorder, prefrontal cortex},
	pages = {485--493},
}

@article{tannou_neural_2021,
	title = {Neural {Activation} in {Risky} {Decision}-{Making} {Tasks} in {Healthy} {Older} {Adults}: {A} {Meta}-{Analysis} of {fMRI} {Data}},
