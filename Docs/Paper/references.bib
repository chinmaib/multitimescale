	keywords = {Brain modeling, Brain–computer interface, Calibration, EEG, Electroencephalography, Estimation, Frequency selective surfaces, Probability distribution, Robustness, domain adaptation (DA), ensemble learning, fuzzy sets (FSs), transfer learning (TL)},
