}

@article{schonberg_decreasing_2012,
	title = {Decreasing {Ventromedial} {Prefrontal} {Cortex} {Activity} {During} {Sequential} {Risk}-{Taking}: {An} {fMRI} {Investigation} of the {Balloon} {Analog} {Risk} {Task}},
